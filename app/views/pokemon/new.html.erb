<%= form_with scope: :pokemon, local: true do |form| %>
    <p>
        <%= form.label :id %><br>
        <%= form.text_field :id %>
    </p>

    <p>
        <%= form.label :num %><br>
        <%= form.text_field :num %>
    </p>

    <p>
        <%= form.label :name %><br>
        <%= form.text_field :name %>
    </p>

    <p>
        <%= form.label :img %><br>
        <%= form.text_area :img %>
    </p>

    <p>
        <%= form.label :height %><br>
        <%= form.text_field :height %>
    </p>

    <p>
        <%= form.label :weight %><br>
        <%= form.text_field :weight %>
    </p>

    <p>
    <%= form.submit %>
    </p>
<% end %>

<%= link_to 'Back', "/pokemon" %>