<%# <h1>HELLO!!</h1> %>

<h1>Listing Pokemons</h1>
<%= link_to 'New pokemon', new_pokemon_path %>
<br></br>
<table>
  <tr>
    <th>Id</th>
    <th>Num</th>
    <th>Name</th>
    <th>Height</th>
    <th>Weight</th>
    <th></th>
  </tr>

  <% @pokemons.each do |pokemon| %>
    <tr>
      <td><%= pokemon.id %></td>
      <td><%= pokemon.num %></td>
      <td><%= pokemon.name %></td>
      <td><%= pokemon.height %></td>
      <td><%= pokemon.weight %></td>
      <td><%= link_to 'Show', pokemon_path(pokemon) %></td>
      <td><%= link_to 'Edit', edit_pokemon_path(pokemon) %></td>
      <td><%= link_to 'Destroy', pokemon_path(pokemon),
        method: :delete,
        data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
</table>